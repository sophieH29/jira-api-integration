@using System.Web
@using System.Web.Optimization

@{
    ViewBag.Title = "IECF";
}
<h2>Hello from Jira view.</h2>
@Scripts.Render("~/bundles/grid")

<link href="~/Content/Layout.css" rel="stylesheet" />
<link href="~/Content/kendo/kendo.common.min.css" rel="stylesheet" />
<link href="~/Content/kendo/kendo.default.min.css" rel="stylesheet" />

<link href="~/Content/kendo/filters.css" rel="stylesheet" />
<script src="~/Scripts/kendo/kendo.core.min.js"></script>
<script src="~/Scripts/kendo/kendo.grid.min.js"></script>
<script src="~/Scripts/kendo/kendo.web.min.js"></script>
<script src="~/Scripts/kendo/kendo.all.js"></script>
<link href="~/Content/kendo/kendo.dataviz.css" rel="stylesheet" />
<link href="~/Content/kendo/kendo.dataviz.default.css" rel="stylesheet" />


<br />

<br />

<div id="filterSwitch">Show/Hide Filters</div>
<div id="filterPane">
    <form style="text-align: left">
        <div style="width: 85%; display: inline-block">
            <div>
                <div>
                    <label>Type:</label>
                    <select class="input-validation-valid" id="type">
                        <option></option>
                        <option>Bug</option>
                        <option>New Feature</option>
                    </select>
                </div>
                <div>
                    <label>Priority:</label>
                    <select class="input-validation-valid" id="priority">
                        <option></option>
                        <option>High</option>
                        <option>Immediate</option>
                        <option>Medium</option>
                        <option>Low</option>
                        <option>On Hold</option>
                    </select>
                </div>
                <div>
                    <label>Status:</label>
                    <select class="input-validation-valid" id="status">
                        <option></option>
                        <option>Open</option>
                        <option>In Progress</option>
                        <option>Reopened</option>
                        <option>Resolved</option>
                        <option>Closed</option>
                    </select>
                </div>

                <div>
                    <label>Created From: </label>
                    <input type="text" id="dateFrom" class="input-validation-valid" placeholder="Created From..." />
                </div>

                <div>
                    <label>Created To: </label>
                    <input type="text" id="dateTo" class="input-validation-valid" placeholder="Created To..." />
                </div>
            </div>
        </div>

    </form>

</div>
<div id="buttons" style="width: 85%; display: inline-block">
    <input type="button" id="refresh" value="Refresh" />
    <a href="@Url.Action("Index", "Issue")">
        <input type="button" value="Create Issue" />
    </a>
</div>

<div id="tabs">
    <ul>
        <li><a href="#tabs-1">Table</a></li>
        <li><a href="#tabs-2">Details</a></li>
    </ul>
    <div id="tabs-1">
        <div id="grid">
            <table id="dataTable" style="width: auto; float: left">
            </table>
        </div>
    </div>
    <div id="tabs-2">
        <div id="details">
            <div>
                <div>
                    <label>Key:</label>                     
            <input type="text"  id="det_key">                       
            </input>
                </div>

                 <div>
                    <label>Type:</label>                     
            <input type="text"  id="det_type">                       
            </input>
                </div>

                <div>
                    <label>Summary:</label>                     
            <input type="text"  id="det_summary">                       
            </input>
                </div>

                 <div>
                    <label>Description:</label>                     
            <input type="text"  id="det_description">                       
            </input>
                </div>

                <div>
                    <label>Status:</label>                     
            <input type="text"  id="det_status">                       
            </input>
                </div>

                <div>
                    <label>Priority:</label>                     
            <input type="text"  id="det_priority">                       
            </input>
                </div>

                <div>
                    <label>Created:</label>                     
            <input type="text"  id="det_created">                       
            </input>
                </div>

                <div>
                    <label>Updated:</label>                     
            <input type="text"  id="det_updated">                       
            </input>
                </div>

                 <div>
                    <label>Resolved:</label>                     
            <input type="text"  id="det_resolved">                       
            </input>
                </div>

                <div>
                    <label>Due:</label>                     
            <input type="text"  id="det_due">                       
            </input>
                </div>

               
        </div>
    </div>
        <div id="buttons2" style="width: 85%; display: inline-block">
    <input type="button" id="edit" value="Edit" />
    <a href="@Url.Action("Index", "Home")">
        <input type="button" value="Back to table" />
    </a>
</div>

</div>

@section scripts{
    <script type="text/javascript">
        document.getElementById("header").innerHTML
        $(document).ready(function () {
            // create DatePicker from input HTML element
            $("#dateFrom, #dateTo").kendoDatePicker({
                format: "yyyy-MM-dd"
            });

            $("#tabs").kendoTabStrip({
                animation: {
                    open: {
                        effects: "fadeIn"
                    }
                }
            });
        });

    </script>
}

