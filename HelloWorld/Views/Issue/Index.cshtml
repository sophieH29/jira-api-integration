@using HelloWorld.Models
@model HelloWorld.Models.Issue

@{
    ViewBag.Title = "Create Issue";
}

<h2>@ViewBag.Title</h2>

<script src="~/Scripts/Grid/CreateIssue.js"></script>

<form id="creatingForm" style="text-align: left">
    <div class="create-form" style="width: 85%;">

        <div>
            <label style="width:100px">Type:</label>
            <select class="input-validation-valid" id="type_to_create">
                <option>Bug</option>
                <option>New Feature</option>
            </select>
        </div>

        <div>
            <label style="width:100px">Summary:</label>
            <input type="text" class="input-validation-valid" id="summary_to_create"/>                       
            
        </div>
        <div>
            <label style="width:100px">Priority:</label>
            <select class="input-validation-valid" id="priority_to_create">
                <option>High</option>
                <option>Immediate</option>
                <option>Medium</option>
                <option>Low</option>
                <option>On Hold</option>
            </select>
        </div>

        <div>
            <label style="width:100px">Description:</label>
            <input type="text" class="input-validation-valid" id="description_to_create"/>                       
            
        </div>
    </div>

</form>
<br>
<div id="buttons" style="width: 85%; display: inline-block">
    <input type="submit" name="Save" value="Save" id ="save"/>
    <a href="@Url.Action("Index", "Home")">
        <input style="width:180px" type="button" value="Cancel / Back to table" />        
    </a>
    <span  id="messageForCreate" style="color:green"></span>
</div>










